# Database Configuration (Required)
DATABASE_URL="mysql://user:password@host:port/db-name"

# SvelteKit Configuration (Optional)
NODE_ENV="production"
PORT="3000"
HOST="127.0.0.1"
ORIGIN="http://localhost:3000"

# Rate Limiting Configuration (Optional)
RATE_LIMITER_IP='[30, "m"]'
RATE_LIMITER_IPUA='[20, "m"]'

# Base URL for SEO (Optional - will use browser location if not set)
PUBLIC_BASE_URL="https://yourdomain.com"

# Content Length Limits (Optional)
PUBLIC_CONTENT_MIN_LENGTH="1"
PUBLIC_CONTENT_MAX_LENGTH="1000000"

# Password Requirements (Optional)
PUBLIC_PASSWORD_MIN_LENGTH="1"
PUBLIC_PASSWORD_MAX_LENGTH="200"
PUBLIC_PASSWORD_UPPER_CASE_REQUIRED="false"
PUBLIC_PASSWORD_LOWER_CASE_REQUIRED="false"
PUBLIC_PASSWORD_NUMBER_REQUIRED="false"
PUBLIC_PASSWORD_SPECIAL_CHARACTER_REQUIRED="false"

# View Limits and Defaults (Optional)
PUBLIC_VIEWS_MIN="1"
PUBLIC_VIEWS_MAX="1000000"
PUBLIC_VIEWS_DEFAULT="1"
PUBLIC_VIEWS_SHOW_RECIPIENTS_DEFAULT="false"
PUBLIC_VIEWS_UNLIMITED_DEFAULT="false"

# Expiration Settings (Optional)
PUBLIC_EXPIRES_IN_MAX_VALUE="2"
PUBLIC_EXPIRES_IN_MAX_UNIT="months"
PUBLIC_EXPIRES_IN_VALUE_DEFAULT="7"
PUBLIC_EXPIRES_IN_UNIT_DEFAULT="days"
PUBLIC_EXPIRES_IN_SHOW_RECIPIENTS_DEFAULT="false"

# Additional Settings (Optional)
PUBLIC_SHOW_COPY_BUTTON_DEFAULT="false"
PUBLIC_SHOW_DOWNLOAD_BUTTON_DEFAULT="false"
